{
  "name": "reviso-action",
  "version": "0.1.0",
  "private": true,
  "description": "GitHub Action that sends PR diffs to the Reviso API for AI-powered code review",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "package": "ncc build lib/index.js -o dist --source-map --license licenses.txt",
    "lint": "biome check .",
    "format": "biome format --write .",
    "test": "vitest run",
    "all": "npm run build && npm run package && npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vyttle-LLC/reviso-action.git"
  },
  "keywords": ["github-action", "code-review", "ai"],
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/node": "^20.0.0",
    "@vercel/ncc": "^0.38.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  }
}
